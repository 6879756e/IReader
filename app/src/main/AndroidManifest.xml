        <!--            tools:node="merge">-->
        <!--            <meta-data-->
        <!--                android:name="androidx.emoji2.text.EmojiCompatInitializer"-->
        <!--                tools:node="remove" />-->
        <!--        </provider>-->
    </application>

</manifest>